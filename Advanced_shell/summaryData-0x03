#!/bin/bash

DATA_DIR="pokemon_data"
REPORT_FILE="pokemon_report.csv"

# Create or overwrite CSV file with header
echo "Name,Height (m),Weight (kg)" > "$REPORT_FILE"

# Extract name, height (in m), weight (in kg) from each JSON file
for file in "$DATA_DIR"/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')  # Capitalize first letter
    height=$(jq -r '.height' "$file")
    weight=$(jq -r '.weight' "$file")
    height_m=$(awk "BEGIN {printf \"%.2f\", $height / 10}")
    weight_kg=$(awk "BEGIN {printf \"%.2f\", $weight / 10}")
    echo "$name,$height_m,$weight_kg" >> "$REPORT_FILE"
done

# Display report location
echo "CSV Report generated at: $REPORT_FILE"
echo

# Print the report
cat "$REPORT_FILE"
echo

# Compute averages using awk (excluding header)
awk -F',' 'NR>1 {h+=$2; w+=$3; n++} END {
    printf "Average Height: %.2f m\n", h/n
    printf "Average Weight: %.2f kg\n", w/n
}' "$REPORT_FILE"
