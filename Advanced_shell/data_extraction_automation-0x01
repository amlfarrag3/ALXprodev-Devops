#!/bin/bash
data=$(jq -r '.name, .types[0].type.name, .weight, .height' data.json)
echo "$data" | awk 'NR==1{name=$0} NR==2{type=$0} NR==3{w=$0} NR==4{h=$0} END{printf "%s is of type %s, weighs %dkg, and is %.1fm tall.\n", name, type, w/10, h/10}' | \
sed -E 's/^([a-z])/\U\1/; s/ of type ([a-z])/\U\1/'


